{
    "main": {
        "flags": ["-Wall", "-Werror", "-std=c99"],
        "defines": ["_UF_BUILD_DLL_"],

        "includes": ["uniform/include", "external/include"],
        "sources": ["uniform/src/ufcore/*.c", "uniform/src/ufcore/*/*.c"],

        "name": "ufcore64",
        "type": "dll",
        "dest": "build"
    },
    "unicorn": {
        "flags": ["-Wall", "-Werror", "-std=c99"],
        "defines": ["_UF_BUILD_DLL_"],

        "includes": ["uniform/include", "external/include"],
        "sources": ["uniform/src/unicorn/*.c"],

        "libraries": {
            "ufcore64": "build",
            "r3kit": "external/bin"
        },

        "name": "unicorn64",
        "type": "exe",
        "dest": "build"
    }
}
