{
    "main": {
        "flags": ["-Wall", "-Werror", "-std=c99"],
        "defines": ["_UF_BUILD_DLL_"],

        "includes": ["uniform/include", "external/include"],
        "sources": ["uniform/src/ufcore/*.c", "uniform/src/ufcore/*/*.c"],

        "libraries": {
            "gdi32": null, "opengl32": null,
            "r3kit": "external/bin"
        },

        "name": "ufcore64",
        "type": "dll",
        "dest": "build"
    },
    "unicorn": {
        "flags": ["-Wall", "-Werror", "-std=c99"],
        "defines": ["_UF_BUILD_DLL_"],

        "includes": ["uniform/include", "external/include"],
        "sources": ["uniform/src/unicorn/*.c"],

        "libraries": {"ufcore64": "build", "r3kit": "external/bin"},

        "name": "unicorn64",
        "type": "exe",
        "dest": "build"
    },
    "ufsandbox": {
        "flags": ["-Wall", "-Werror", "-std=c99"],

        "includes": ["uniform/include", "external/include"],
        "sources": ["uniform/src/ufsandbox/*.c"],

        "libraries": {"ufcore64": "build"},

        "name": "ufsandbox",
        "type": "dll",
        "dest": "external/user/bin"
    }
}
